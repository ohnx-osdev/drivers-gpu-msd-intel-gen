import("//magma/gnbuild/magma.gni")

shared_library("msd-intel-gen") {
  deps = [
    "$magma_build_root/src/main",
    "src",
  ]
}

shared_library("test") {
  testonly = true

  output_name = "msd-intel-gen-test"

  deps = [
    "$magma_build_root/src/main:test_driver",
    "src",
  ]
}

group("gtest") {
  testonly = true
  
  deps = [ "tests/unit_tests:msd_unit_tests" ]
}

# This config allows inclusion of headers via relative paths
config("msd_tests_include_config") {
  include_dirs = [ "tests" ]
}

# This config allows inclusion of headers via relative paths
config("msd_src_include_config") {
  include_dirs = [ "src" ]
}
